{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "notification:default",
    "dialog:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/syncthing",
          "sidecar": true,
          "args": [
            "-no-browser",
            "-no-restart",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    },
    "shell:allow-kill"
  ]
}
